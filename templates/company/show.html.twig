{% extends 'base.html.twig' %}
{% block page_title %}
    公司详情
{% endblock %}
{% block title %}
    公司详情
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">{{ company.title }}</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6 mx-auto">
                    <div class="list list-row list-hoverable">
                        <div class="list-item">
                            <div class="mr-2">Title：</div>
                            <span class="text-body d-block">{{ company.title }}</span>
                        </div>
                    </div>
                    <div class="list list-row list-hoverable">
                        <div class="list-item">
                            <div class="mr-2">Status：</div>
                            <span class="text-body d-block">{{ company.status }}</span>
                        </div>
                    </div>
                    <div class="list list-row list-hoverable">
                        <div class="list-item">
                            <div class="mr-2">CreateAt：</div>
                            <span class="text-body d-block">{{ company.createAt|date('Y-m-d H:i:s') }}</span>
                        </div>
                    </div>
                    <div class="list list-row list-hoverable">
                        <div class="list-item">
                            <div class="mr-2">UpdateAt：</div>
                            <span class="text-body d-block">{{ company.updateAt|date('Y-m-d H:i:s') }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}