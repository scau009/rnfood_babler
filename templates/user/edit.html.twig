{% extends 'base.html.twig' %}
{% block title %}
    编辑用户-{{ user.email }}
{% endblock %}
{% block page_title %}
    编辑用户
{% endblock %}

{% block body %}
    <form action="" class="card" enctype="multipart/form-data" method="post">
        <div class="card-header">编辑</div>
        <div class="card-body">
            <div class="col-xl-4" style="margin: 0 auto">
                <div class="mb-3">
                    <label class="form-label required" for="">Email</label>
                    <div class="form-widget">
                        <input type="text" readonly required="required" value="{{ user.email }}" class="form-control">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label required" for="status">Roles</label>
                    <div class="form-widget">
                        <select name="roles[]" data-widget="select2" class="form-control" multiple>
                            {% for role in role_list() %}
                                <option {% if role.id in user.roles %}selected{% endif %} value="{{ role.id }}">{{ role.label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for=""></label>
                    <div class="form-widget">
                        <button type="submit" class="btn btn-primary w-100">Submit</button>
                    </div>
                </div>
            </div>
        </div>


    </form>
{% endblock %}

{% block javascripts %}
{% endblock %}